
.button
    cursor: pointer
    border: 0
    border-radius: 3px
    background-color: #e74295
    color: #fff
    padding: 13px
    margin: 0px 0 10px 0
    font-size: 18px
    width: 100%
    height: 46px
    font-weight: 400
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26)

    &.icon
        padding-left: 36px
        background-repeat: no-repeat
        background-size: 37px 37px

    &.theme-facebook
        text-transform: uppercase
        background-image: url("/facebook.svg")
        background-color: #3b5998
        font-size: 14px
        padding-left: 36px
