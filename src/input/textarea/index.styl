
.textarea 
    position: relative
    height: 100%
    width: 100%

    > input
        width: 100%
        height: 100%

        appearance: none
        -moz-appearance: none
        -webkit-appearance: none

        border-radius: 0
        -moz-border-radius: 0
        -webkit-border-radius: 0

        border: 1px #ddd solid
        padding: 10px
        padding-bottom: 7px

        font-size: 16px
