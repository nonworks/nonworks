
.input 
    position: relative
    height: 100%
    width: 100%

    > input
        width: 100%
        height: 100%

        appearance: none
        -moz-appearance: none
        -webkit-appearance: none

        border-radius: 0
        -moz-border-radius: 0
        -webkit-border-radius: 0

        border: 1px #ddd solid
        padding: 10px
        padding-bottom: 7px

        font-size: 16px

    > .input-cross
        position: absolute
        height: 10px
        padding: 10px
        right: 10px
        background: url('/cross.svg') no-repeat
        background-size: contain
        top: 50%
        transform: translate(0%,-50%)
        cursor: pointer
